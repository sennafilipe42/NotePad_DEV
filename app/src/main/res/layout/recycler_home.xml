<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="14dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="#6C93CB"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- TextView para exibir o texto do notepad -->
    <TextView
        android:id="@+id/tituloNotepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="Titulo do Notepad"
        android:textColor="@color/light_mode"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- TextView para exibir o texto do notepad -->
    <TextView
        android:id="@+id/textoNotepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_mode"
        android:text="Texto do notepad"
        android:textSize="17sp" />

    <!-- TextView para exibir o timestamp do notepad -->
    <TextView
        android:id="@+id/timestampNotepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="italic"
        android:gravity="right"
        android:text="Texto do notepad"
        android:textColor="@color/light_mode"
        android:textSize="12sp" />


</LinearLayout>